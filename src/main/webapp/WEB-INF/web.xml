<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:javaee="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	version="3.0">
	
	<servlet>
		<servlet-name>Accueil</servlet-name>
		<servlet-class>com.ocjeetest.servlets.Accueil</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Accueil</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Bonjour</servlet-name>
		<servlet-class>com.ocjeetest.servlets.Bonjour</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Bonjour</servlet-name>
		<url-pattern>/bonjour</url-pattern>
	</servlet-mapping>
	
	<jsp-config>
		<jsp-property-group>
			<url-patter>*.jsp</url-patter>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
	
</web-app>